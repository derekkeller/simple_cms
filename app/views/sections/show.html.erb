<h1>Section Detail</h1>

<table>
	<tr>
		<th>Page ID</th>
		<td><%= @section.page_id %></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%= @section.name %></td>
	</tr>
	<tr>
		<th>Position</th>
		<td><%= @section.position %></td>
	</tr>
	<tr>
		<th>Visible</th>
		<td><%= @section.visible? ? 'Yes' : 'No' %></td>
	</tr>
	<tr>
		<th>Content Type</th>
		<td><%= @section.content_type.capitalize %></td>
	</tr>
	<tr>
		<th>Content</th>
		<td><%= @section.content %></td>
	</tr>
</table>
		
<br />
<%= link_to 'Back to sections', sections_path %>