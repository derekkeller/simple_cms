<% form_for @section do |f| %>

<%= render 'shared/form', :target => @section %>

	<p>
		<%= f.label :page_id %><br />
		<%= f.select :page_id, (Page.all.collect {|p| [p.name, p.id]}) %>
	</p>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :position %><br />
		<%= f.select :position, (1..@section_count) %>
	</p>
	<p>
		<%= f.radio_button :visible, true %> Visible
		<%= f.radio_button :visible, false %> Hidden
	</p>
	<p>
		<%= f.label :content_type %><br />
		<%= f.select :content_type, ["HTML", "text"] %>
	</p>
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content, :size => @text_area_size %>
	</p>		
	<p>
		<%= f.submit :Done %>
	</p>
<% end %>



