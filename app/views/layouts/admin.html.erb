<DOCTYPE!>
<html>
  <head>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <title>Simple CMS | <%= @page_title || 'Admin Area' %></title>
  </head>

  <body>

  <div id="top_menu">
    <%= link_to 'Subjects', subjects_path %> |
    <%= link_to 'Pages', pages_path %> |
    <%= link_to 'Sections', sections_path %> |
    <%= link_to 'ESPN', 'http://www.espn.com', :target => :blank %>
  </div>

  <h1>Admin View</h1>
    
  <% if flash[:notice].present? %>
      <div class="message">
        <ul>
          <% flash[:notice].each do |message| %>
            <li><%= notice %></li>
          <% end %>  
        </ul>
      </div>
  <% end %>
  
  <div id='body_container'>
    <%= yield %>
  </div>
  
  </body>
</html>