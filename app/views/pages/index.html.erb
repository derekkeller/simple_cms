<div class='page_title'>
	Pages Index
</div>
<div class='page_title_sub'>
	<%= pluralize(@pages.size, 'Page') %> Found
</div>

<table>
	<tr>
		<th>Subject ID</th>
		<th>Subject Name</th>
		<th>Name</th>
		<th>Permalink</th>
		<th>Position</th>
		<th>Visible</th>
		<th></th>
		<th></th>		
		<th></th>
	</tr>
	<% @pages.each do |page| %>
	<tr>
		<td><%= page.subject_id %></td>
		<td><%= page.subject.name %></td>
		<td><%= page.name %></td>
		<td><%= page.permalink %></td>
		<td><%= page.position %></td>
		<td><%= page.visible? ? "Yes" : "No" %></td>
		<td><%= link_to 'Show', page %>
		<td><%= link_to 'Edit', edit_page_path(page) %></td>
		<td><%= link_to 'Destroy', page, :message => "Are you sure?", :method => :delete %></td>
	</tr>
	<% end %>
</table>
		
<br />
<%= link_to 'New Page', new_page_path %>