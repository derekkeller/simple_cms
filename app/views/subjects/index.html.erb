<h1>Subjects Index Page</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Position</th>
		<th>Visible</th>
		<th>Pages</th>
		<th></th>
		<th></th>
		<th></th>		
	</tr>
	<% @subjects.each do |subject| %>
	<tr>
		<td><%= subject.name %></td>
		<td><%= subject.position %></td>
		<td><%= subject.visible? ? 'Yes' : 'No' %></td>
		<td><%= subject.pages.size %></td>
		<td><%= link_to "Show", subject %></td>
		<td><%= link_to "Edit", edit_subject_path(subject) %></td>
		<td><%= link_to "Destroy", subject, :message => "Are you sure?", :method => :delete %></td>
	</tr>
<% end %>
</table>

<br />
<%= link_to 'New Subject', new_subject_path %>