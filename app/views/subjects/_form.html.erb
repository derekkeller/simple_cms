<% form_for @subject do |f| %>

<%= render 'shared/form', :target => @subject %>

<p>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :position %><br />
	<%= f.text_field :position %>
</p>
<p>
	<%= f.label :visible %><br />
	<%= f.check_box :visible %>
</p>
<p>
	<%= f.submit :done %>
</p>

<% end %>